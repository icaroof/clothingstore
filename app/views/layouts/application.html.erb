<!DOCTYPE html>
<html>
  <head>
    <title>Loja de camisetas</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <%= nav_bar brand: "Loja de camisetas", brand_link: root_url do %>
    <%= form_tag find_produto_path, method: :get, class: "navbar-form navbar-right" do %>
    <div class="form-group">
      <%= text_field_tag :nome, @query_string, class: "form-control" %>
      <%= button_to "Buscar", nil, class: "btn btn-default" %>
    </div>
    <% end %>
  <% end %>
    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
